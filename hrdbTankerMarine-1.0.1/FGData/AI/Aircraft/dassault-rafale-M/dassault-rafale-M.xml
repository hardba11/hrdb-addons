<?xml version="1.0" encoding="utf-8"?>

<PropertyList>
  <model>
    <path>AI/Aircraft/dassault-rafale-M/model/rafale-tanker.xml</path>
    <offsets>
      <x-m>0</x-m>
      <y-m>0</y-m>
      <z-m>0</z-m>
      <pitch-deg>0</pitch-deg>
    </offsets>
  </model>

  <animation>
    <type>noshadow</type>
    <object-name>left light top</object-name>
    <object-name>left light bottom</object-name>
    <object-name>right light top</object-name>
    <object-name>right light bottom</object-name>
    <object-name>tail light</object-name>
    <object-name>strobe light</object-name>
    <object-name>beacon light</object-name>
  </animation>

  <model>
    <name>contrail</name>
    <path>AI/Aircraft/dassault-rafale-M/effects/contrail.xml</path>
    <offsets>
      <x-m>20</x-m>
      <y-m>0</y-m>
      <z-m>0.35</z-m>
    </offsets>
  </model>


  <!-- ~~~~~~~~~~~~~~~~~~ als lights -->
  <model>
    <name>left light top</name>
    <path>AI/Aircraft/dassault-rafale-M/effects/light_nav_left.xml</path>
    <offsets>
      <x-m type="float">3.5</x-m>
      <y-m type="float">-5</y-m>
      <z-m type="float">.05</z-m>
    </offsets>
  </model>
  <model>
    <name>left light bottom</name>
    <path>AI/Aircraft/dassault-rafale-M/effects/light_nav_left.xml</path>
    <offsets>
      <x-m type="float">3.5</x-m>
      <y-m type="float">-5</y-m>
      <z-m type="float">-.12</z-m>
    </offsets>
  </model>
  <model>
    <name>right light top</name>
    <path>AI/Aircraft/dassault-rafale-M/effects/light_nav_right.xml</path>
    <offsets>
      <x-m type="float">3.5</x-m>
      <y-m type="float">5</y-m>
      <z-m type="float">.05</z-m>
    </offsets>
  </model>
  <model>
    <name>right light bottom</name>
    <path>AI/Aircraft/dassault-rafale-M/effects/light_nav_right.xml</path>
    <offsets>
      <x-m type="float">3.5</x-m>
      <y-m type="float">5</y-m>
      <z-m type="float">-.12</z-m>
    </offsets>
  </model>
  <model>
    <name>tail light</name>
    <path>AI/Aircraft/dassault-rafale-M/effects/light_nav_tail.xml</path>
    <offsets>
      <x-m type="float">7.12</x-m>
      <y-m type="float">0</y-m>
      <z-m type="float">3.15</z-m>
    </offsets>
  </model>

  <model>
    <name>strobe light</name>
    <path>AI/Aircraft/dassault-rafale-M/effects/light_strobe.xml</path>
    <offsets>
      <x-m type="float">1.15</x-m>
      <y-m type="float">0</y-m>
      <z-m type="float">1.05</z-m>
    </offsets>
  </model>
  <model>
    <name>beacon light</name>
    <path>AI/Aircraft/dassault-rafale-M/effects/light_beacon.xml</path>
    <offsets>
      <x-m type="float">-1.08</x-m>
      <y-m type="float">0</y-m>
      <z-m type="float">-.38</z-m>
    </offsets>
  </model>


  <multiplay>
    <refuel>
      <type>probe</type>
    </refuel>
  </multiplay>

</PropertyList>
