<PropertyList>
  <addons>
    <by-id>
      <org.flightgear.addons.hrdb.BrsqBombable>
        <addon-devel>
          <foo type="int">1</foo>
          <bar type="bool">false</bar>
          <my-prop>sample</my-prop>
        </addon-devel>
      </org.flightgear.addons.hrdb.BrsqBombable>
    </by-id>
  </addons>

  <sim>
    <submodels>
      <serviceable type="bool">true</serviceable>
      <path>Aircraft/bourrasque/models/effects/Weapons/release.xml</path>
    </submodels>
    <multiplay>
      <generic>
        <int                  n="10" type="int">0</int>     <!-- bombable : trigger guns -->
        <string               n="9"  type="string"></string> <!-- bombable -->
      </generic>
    </multiplay>

  </sim>
  <input>
    <keyboard>
      <key n="101">
        <name>e</name>
        <desc>guns</desc>
        <binding>      
          <command>property-assign</command>
          <property>sim/multiplay/generic/int[10]</property>
          <value type="int">1</value>
        </binding>
        <mod-up>
          <binding>
            <command>property-assign</command>
            <property>sim/multiplay/generic/int[10]</property>
            <value type="int">0</value>
          </binding>
        </mod-up>
      </key>
    </keyboard>
  </input>

