<PropertyList>
  <addons>
    <by-id>
      <org.flightgear.addons.hrdb.ControlSynapse>
        <addon-devel>
          <foo type="int">1</foo>
          <bar type="bool">false</bar>
          <my-prop>sample</my-prop>
        </addon-devel>
      </org.flightgear.addons.hrdb.ControlSynapse>
    </by-id>
  </addons>

  <sim>
    <multiplay>
      <generic>
        <int                  n="14" type="int">12500</int> <!-- loyal wingman : alt -->
        <int                  n="15" type="int">220</int>   <!-- loyal wingman : speed -->
        <string               n="1"  type="string"></string> <!-- loyal wingman : callsign to follow -->
        <string               n="2"  type="string"></string> <!-- loyal wingman : fix -->
      </generic>
    </multiplay>
    <menubar>
      <default>
        <menu n="201">
          <label>HrdbAddOns</label>
          <item n="1">
            <label>Loyal wingman ...</label>
            <name>synapse-control</name>
            <binding>
              <command>dialog-show</command>
              <dialog-name>synapse-control</dialog-name>
            </binding>
          </item>
        </menu>
      </default>
    </menubar>
  </sim>

</PropertyList>
